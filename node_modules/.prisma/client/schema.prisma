generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String
  points   Int    @default(0)
  level    Int    @default(1)
  role     String @default("USER")

  createdAt DateTime @default(now())

  scores         Score[]
  gamesAsPlayer1 Game[]       @relation("GamePlayer1")
  gamesAsPlayer2 Game[]       @relation("GamePlayer2")
  badges         UserBadge[]
  hostedRooms    Room[]       @relation("RoomHost")
  roomPlayers    RoomPlayer[]
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  content   String
  period    String
  order     Int
  createdAt DateTime @default(now())

  questions Question[]
  scores    Score[]
  games     Game[]
  rooms     Room[]
}

model Question {
  id        String   @id @default(uuid())
  text      String
  chapterId String
  chapter   Chapter  @relation(fields: [chapterId], references: [id])
  answers   Answer[]

  roomQuestions RoomQuestion[]
  gameQuestions GameQuestion[]

  @@index([chapterId])
}

model Answer {
  id         String   @id @default(uuid())
  text       String
  isCorrect  Boolean  @default(false)
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
}

model Score {
  id        String   @id @default(uuid())
  userId    String
  quizType  String
  chapterId String?
  points    Int
  createdAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id])
  chapter Chapter? @relation(fields: [chapterId], references: [id])
}

model Badge {
  id          String      @id @default(uuid())
  title       String
  description String
  icon        String
  condition   String
  users       UserBadge[]
}

model UserBadge {
  id      String   @id @default(uuid())
  userId  String
  badgeId String
  date    DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])
}

model Room {
  id         String    @id @default(uuid())
  joinCode   String    @unique
  hostId     String
  status     String    @default("WAITING") // WAITING | RUNNING | FINISHED
  createdAt  DateTime  @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  host          User           @relation("RoomHost", fields: [hostId], references: [id])
  players       RoomPlayer[]
  questions     RoomQuestion[]
  Chapter       Chapter?       @relation(fields: [chapterId], references: [id])
  chapterId     String?
  questionCount Int            @default(10)
}

model RoomQuestion {
  id         String @id @default(uuid())
  roomId     String
  questionId String
  order      Int

  room     Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([roomId, questionId])
  @@index([roomId, order])
}

model RoomPlayer {
  id       String   @id @default(uuid())
  roomId   String
  userId   String
  joinedAt DateTime @default(now())

  score       Int?
  time        Int?
  submittedAt DateTime?

  room Room @relation(fields: [roomId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
}

model Game {
  id         String    @id @default(uuid())
  status     String    @default("PENDING")
  chapterId  String?
  createdAt  DateTime  @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  player1Id String
  player2Id String?

  player1Score Int?
  player2Score Int?
  player1Time  Int?
  player2Time  Int?

  questionCount Int @default(10)

  chapter Chapter? @relation(fields: [chapterId], references: [id])
  player1 User     @relation("GamePlayer1", fields: [player1Id], references: [id])
  player2 User?    @relation("GamePlayer2", fields: [player2Id], references: [id])

  questions GameQuestion[]
}

model GameQuestion {
  id         String @id @default(uuid())
  gameId     String
  questionId String
  order      Int

  game     Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([gameId, order])
  @@unique([gameId, questionId])
  @@index([gameId])
  @@index([questionId])
}
